[flake8]
ignore=B008,E121,E123,E126,E203,E226,E24,E704,W503,W504,D100,D105,D200,D301,D402
max-line-length=99
exclude=
    .git
    docs
inline-quotes="
import-order-style=appnexus
application-package-names=plangym, wrappers
per-file-ignores=
    **/__init__.py: F401
    **/tests/**:D
    **/wrappers/**: D
    # Should be resolved one by one
    ./plangym/dm_control.py:D
    ./plangym/montezuma.py:D
    ./plangym/ray.py:D
    ./plangym/minimal.py:D
